@model StoreProject.Models.Product

@using (Ajax.BeginForm("Add_Product", "Product", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "def", OnSuccess = "addproduct()" }))
{

    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
